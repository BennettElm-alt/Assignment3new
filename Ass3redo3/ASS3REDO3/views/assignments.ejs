<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Assignments List</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <!-- navbar -->
  <%- include('partials/navbar') %>

  <!-- list stuff -->
  <div class="container mt-4">
    <h1>All Assignments</h1>
    <ul class="list-group">
      <% assignments.forEach(assignment => { %>
        <li class="list-group-item">
          <strong><%= assignment.title %></strong> - <%= assignment.status %>
          <a href="/edit/<%= assignment._id %>" class="btn btn-primary btn-sm ms-2">Edit</a>
          <form action="/delete/<%= assignment._id %>" method="POST" style="display: inline;">
            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
          </form>
        </li>
      <% }); %>
    </ul>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
